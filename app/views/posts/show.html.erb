<h1>It's post</h1>
    <p>
    <strong>Name:</strong>
    <%= @post.title %>
    </p>

    <p>
    <strong>Text:</strong>
    <%= @post.body %>
    </p>
    <h3>Your comment:</h3>
<ul>
  <% @post.comments.each do |comment| %>
    <li><%= comment.content %></li>
    <%= form_for([@post, comment.comments.build]) do |f| %>
    <% if !parent.nil? %>
      <%= f.hidden_field :parent_id, value: parent.id %>
      <% end %>
      <%= f.text_area :content, class: 'form-control', placeholder: 'Comment to comment' %>
      <%= f.submit 'Reply', class: 'btn btn-primary' %>
    <% end %>
    <%= button_to "Destroy this comment",[@post, comment], method: :delete, class:"btn btn-sm btn-danger"%>
  <% end %>
</ul>
    <h5>It's comment</h5>
    <%= form_for([@post, @post.comments.build]) do |f| %>
    <%= f.hidden_field :parent, value: nil %>
    <%= f.text_area :content, placeholder: 'Your comment...' %>
    <%= f.submit 'Add comment', class:"btn btn-sm btn-outline-secondary" %>
<% end %>
    <%= link_to "Back to posts", root_path, class:"btn btn-sm btn-outline-secondary" %>
    <%= button_to "Destroy this post", post_path(@post), method: :delete, class:"btn btn-sm btn-danger"%>