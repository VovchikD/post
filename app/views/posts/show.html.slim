.mx-auto.max-w-lg.mt-8.mt-15
  .block.max-w-lg.p-6.bg-white.rounded-lg.dark:bg-gray-800.dark:border-gray-700.dark:hover:bg-gray-700.mt-5
    .flex.justify-between
      = link_to raw('&#8592; Back to posts'), root_path, class: "btn btn-sm btn-outline-secondary"
      = button_to "Destroy this post", post_path(@post), method: :delete, class: "text-red-600 text-xs cursor-pointer dark:text-red-500 dark:hover:bg-red-600"

    .mb-2.text-2xl.font-bold.tracking-tight.text-gray-900.dark:text-white.mt-7 = @post.title
    .font-normal.text-gray-700.dark:text-gray-400 = @post.body
    - like = current_user.likes.find_by(target: @post)

    - if like.nil?
      = form_for([current_user.likes.new]) do |f|
        .field
          = f.hidden_field :target_id, value: @post.id
          = f.hidden_field :target_type, value: "Post"
        .actions
          svg.w-5.h-5.mt-1
          = f.submit "Like #{@post.likes.count}", class: "text-white cursor-pointer bg-blue-700 dark:hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center me-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    - else
      = button_to "Unlike #{@post.likes.count}", like_path(like), method: :delete, class: "text-white cursor-pointer bg-blue-700 dark:hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-full text-sm p-2.5 text-center inline-flex items-center me-2 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" 
      
    div.mt-12
      = render partial: 'posts/comments'
      = render 'posts/form_comment'
