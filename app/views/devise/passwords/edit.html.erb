<div class="flex min-h-screen items-center justify-center">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <div class="mx-auto mb-4">
      <img class="mx-auto h-10 w-auto mb-4"" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
      <h2 class="text-center text-3xl font-bold text-green">Change your password</h2>
    </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token, class: 'form-control'%>

  <div class="mt-4 sm:w-full sm:max-w-sm">
    <%= f.label :password, "New pasword", class: "block text-sm font-medium leading-6 text-gray-900"  %><br />
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em><br />
    <% end %>
    <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full py-2 px-3 border rounded-md focus:ring focus:ring-green-300" %>
  </div>

  <div class="mt-4 sm:w-full sm:max-w-sm">
    <%= f.label :password_confirmation, "Confirm new password", class: "block text-sm font-medium leading-6 text-gray-900"  %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full py-2 px-3 border rounded-md focus:ring focus:ring-green-300" %>
  </div>

  <div class="mt-6 sm:w-full sm:max-w-sm">
    <%= f.submit "Change my password", class: "flex w-full justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm leading-6 text-white shadow-sm hover:bg-indigo-500"  %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
  </div>
</div>